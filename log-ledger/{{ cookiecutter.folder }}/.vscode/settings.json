{
    "vsicons.presets.hideExplorerArrows": true,
    "vsicons.presets.foldersAllDefaultIcon": true,

    "files.exclude": {
        ".tools/": true,
        ".venv/": true
    },

    "terminal.integrated.defaultProfile.windows": "Git Bash",

    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "all",
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 120,
    "editor.rulers": [ 100, 120 ]

    "code-eol.newlineCharacter": "¬",
    "code-eol.returnCharacter" : "¤",
    "code-eol.crlfCharacter"   : "¤¬",

    "open-file-from-path.regExp" : "['|\"]([^'|\"]+)['|\"]",

    "indentRainbow.ignoreErrorLanguages" : [
        "yaml"
    ],

    "pasteImage.encodePath": "none",
    "pasteImage.path": "${currentFileDir}/_figures",
    "pasteImage.prefix": ".. figure:: ",

    "esbonio.server.enabled"         : false,
    "esbonio.server.enableDevTools"  : false,
    "esbonio.sphinx.buildCommand"    : ["-W", "-c", "docs/", "docs/2024/06-Jun/CW26/1-MON", "out/docs/esbonio"],
    "esbonio.preview.showLineMarkers": false,
    "esbonio.preview.httpPort": 2024,
    "esbonio.logging.level": "error",


    "plantuml.jar": ".tools/plantuml.jar",
    "plantuml.lintDiagramNoName": false,
    "plantuml.jarArgs": [
        // "-config", "./../plantuml.config" // Commented out because it doesn't work. Aborted my tryings...
    ],
    "plantuml.server": "", // Make sure not communicate with internet!

    "patternlinks.rules": [
        {
            // Example URL: https://jira.vitronic.de/browse/PJBIO-359
            "linkPattern": "(?:\\s|`)((?:ITSD|PJBIO|PJRIO|NEXTPROJECT)-(?:\\d+))",
            "linkTarget": "https://jira.vitronic.de/browse/$1"
        },
        {
            // Example URL: :user:`aman`
            "linkPattern": ":user:`([a-z]+)`",
            "linkTarget": "https://intranet.vitronic.de/Allgemeines/Mitarbeitertelefonliste/MitarbeiterInfoMain.php?kurz=$1"
        },
    ],
}
