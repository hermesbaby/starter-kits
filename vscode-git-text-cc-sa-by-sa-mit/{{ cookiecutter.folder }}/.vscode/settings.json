{
    "vsicons.presets.hideExplorerArrows": true,
    "vsicons.presets.foldersAllDefaultIcon": true,


    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#ff9776",
        "activityBar.background": "#ff9776",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#00801f",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#15202b99",
        "sash.hoverBorder": "#ff9776",
        "statusBar.background": "#ff7043",
        "statusBar.foreground": "#15202b",
        "statusBarItem.hoverBackground": "#ff4910",
        "statusBarItem.remoteBackground": "#ff7043",
        "statusBarItem.remoteForeground": "#15202b",
        "titleBar.activeBackground": "#ff7043",
        "titleBar.activeForeground": "#15202b",
        "titleBar.inactiveBackground": "#ff704399",
        "titleBar.inactiveForeground": "#15202b99"
    },
    "peacock.color": "#ff7043",

    "files.exclude": {
        "**/__pycache__/": true,
        "**/*.pyc": true,
        ".tools/": true,
        ".venv/": true
        "poetry.lock": true,
        "docs/config.py": true,
        ".gitignore": true,
        ".gitattributes": true,
        "docs/Makefile": true,
        "pyproject.toml": true,
        "poetry.toml": true,
        "docs/conf.py": true,
        "docs/Kconfig": true,
        "docs/plantuml.config": true,
        "docs/puppeteer-config.json": true,
        "sphinx-contrib/": true,
    },

    "terminal.integrated.defaultProfile.windows": "Git Bash",

    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "all",
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 120,
    "editor.rulers": [ 100, 120 ],

    "code-eol.newlineCharacter": "¬",
    "code-eol.returnCharacter": "¤",
    "code-eol.crlfCharacter": "¤¬",

    "indentRainbow.excludedLanguages": [
        "yaml"
    ],

    "path-autocomplete.triggerOutsideStrings": true,
    ],
}
